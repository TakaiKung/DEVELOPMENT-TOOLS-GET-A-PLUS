pipeline {
    agent any

    stages {
        stage('Pull code') {
            steps {
               checkout scm
            }
        }
        stage('Download dependency') {
            steps {
                 dir('Backend') {
                    sh 'npm install'
                }
            }
        }
        stage('Run unit test') {
            steps {
                dir('Backend') {
                   sh 'npm run test'
                }
                
            }
        }
        stage('Run Integration test') {
            steps {
                echo 'run component test'
            }
        }

        stage('Deployment') {
            steps {
                  sh 'ssh -t -t root@159.223.45.216'
                  withCredentials([string(credentialsId: 'T09_BACKEND_PASSWORD', variable: 'T09_PASSWORD')]){
                      sh '$T09_PASSWORD'
                  }
                sh 'git clone https://github.com/fluke1352/DEVELOPMENT-TOOLS-GET-A-PLUS.git'
                dir('DEVELOPMENT-TOOLS-GET-A-PLUS'){
                    sh 'docker-compose -f docker-compose-deploy-back.yml up -d'
                }
                sh 'rm -r DEVELOPMENT-TOOLS-GET-A-PLUS.git'             
                
            }
        }
    }
}

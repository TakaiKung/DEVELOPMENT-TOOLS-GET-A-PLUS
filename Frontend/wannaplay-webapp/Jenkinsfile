pipeline {
     agent any
stages {
    stage('Pull code') {
        steps {
            checkout scm
        }
    }
    stage('Download dependency') {
        steps {
            dir('Frontend/wannaplay-webapp') {
                sh 'npm install'
            }
        }
    }
    stage('Run unit test') {
         steps {
               dir('Frontend/wannaplay-webapp') {
                    sh 'npm run test'
               }
         }
    }
    stage('Run Integration test') {
        steps {
            echo 'run component test'
        }
    }
    stage('Build') {
        steps {
            
           dir('Frontend/wannaplay-webapp') {
                sh 'npm run-script build'
            }
        }
    }
    stage('Deployment') {
        steps {
            echo 'Deploy'
        }
    }
  }
}
